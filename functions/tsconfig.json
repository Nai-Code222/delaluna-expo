{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "lib",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "sourceMap": true,

    "types": ["node", "luxon"]
  },
  "include": ["src", "src/types", "../src/prompts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}