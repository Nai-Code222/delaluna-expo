rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isGeminiService() {
      return (
        (request.auth != null &&
         request.auth.token.email ==
           "ext-firestore-genai-chatbot@delaluna-answers.iam.gserviceaccount.com")
        ||
        (request.auth == null && request.time != null)
      );
    }

    match /users/{userId} {

      // User profile
      allow read: if isOwner(userId)
        || (!exists(/databases/$(db)/documents/users/$(userId))
            && request.auth.uid == userId);
      allow create, update, delete: if isOwner(userId);

      // Connections
      match /connections/{docId} {
        allow read, write: if isOwner(userId);
        allow create, update, delete: if isGeminiService();
      }

      // Compatibility
      match /compatibility/{docId} {
        allow read, write: if isOwner(userId);
        allow create, update, delete: if isGeminiService();
      }

      // Horoscope
      match /horoscope/{docId} {
        allow read: if isOwner(userId) || isGeminiService();
        allow create, update, delete: if isGeminiService() || isOwner(userId);
      }

      // ðŸ”® Tarot Cards
      match /cards/{dateId} {
        allow read, write: if isOwner(userId);
      }

      // ðŸŒŒ Birth Chart
      match /birthChart/{docId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) || isGeminiService();
        allow update: if isGeminiService();
        allow delete: if false;
      }

      match /birthChart/{docId}/tasks/{taskId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && !("output" in request.resource.data)
          && !("error" in request.resource.data)
          && ("prompt" in request.resource.data)
          && ("imageUrl" in request.resource.data)
          && ("status" in request.resource.data)
          && request.resource.data.status == "pending";

        allow update: if false;
        allow delete: if false;
      }
    }
  }
}
