{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "paths": {
      "@/*": ["./src/*"],

      "@firebase/auth": [
        "./node_modules/firebase/node_modules/@firebase/auth/dist/index.rn.d.ts"
      ],
      "@firebase/auth/*": [
        "./node_modules/firebase/node_modules/@firebase/auth/dist/index.rn.d.ts"
      ]
    }
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "scripts/generateTarotRegistry.js"  ]
}
