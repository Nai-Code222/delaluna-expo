{
  "cli": { "version": ">= 16.6.2", "appVersionSource": "remote" },
  "build": {
    "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": true }   
    },
    "development-device": {
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": false }   
    },
    "preview-device": {
      "developmentClient": false,
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": false }
    },
    "preview-simulator": {
      "developmentClient": false,
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": true }
    },
    "production": {
      "developmentClient": false,
      "distribution": "store",        
      "autoIncrement": true,
      "android": { "buildType": "app-bundle" },
      "ios": { "simulator": false }
    }
  },
  "submit": { "production": {} }
}
